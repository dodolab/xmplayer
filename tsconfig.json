{
	"compilerOptions": {
	  "strict": true,
	  "target": "ES6",
	  "module": "ES6",
	  "moduleResolution": "Node",
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "allowJs": true,
	  "declaration": true,
	  "downlevelIteration": true,
	  "importHelpers": true,
	  "sourceMap": true,
	  "noFallthroughCasesInSwitch": true,
	  "noUnusedLocals": true,
	  "outDir": "./es",
	  "rootDir": "./src"
	},
	"include": ["src/**/*", "types"],
	"exclude": ["node_modules", "dist", "test/**/*"]
  }
